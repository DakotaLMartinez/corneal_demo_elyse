<h1>New Book</h1>
<form method="post" action="/books">
  <p>
    <label style="width: 100px; display: inline-block" for="title">Title:</label>
    <input type="text" name="title" value="<%= @book.title %>" />
  </p>
  <p>
    <label style="width: 100px; display: inline-block"  for="author_name">Author Name:</label>
    <input type="text" name="author_name" value="<%= @book.author_name %>" />
  </p>
  <p>
    <input type="submit" value="Create Book" />
  </p>
</form>